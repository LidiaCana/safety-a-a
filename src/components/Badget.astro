---
export interface Props {
  title: string;
  subtitle1: string;
  subtitle2: string;
}
const { title, subtitle1, subtitle2 } = Astro.props;
---

<div
  class="block rounded-lg p-4 shadow-lg shadow-indigo-100 border-t-4 border-main"
>
  <div class="mt-2">
    <dl>
      <div>
        <dd class="font-medium">{title}</dd>
      </div>
    </dl>

    <div class="mt-6 flex items-center gap-8 text-xs">
      <div class="sm:inline-flex sm:shrink-0 sm:items-center sm:gap-2">
        <svg
          class="size-4 text-indigo-700"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M8 14v3m4-3v3m4-3v3M3 21h18M3 10h18M3 7l9-4 9 4M4 10h16v11H4V10z"
          ></path>
        </svg>

        <div class="mt-1.5 sm:mt-0">
          <p class="text-gray-500">{subtitle1}</p>

          <p class="font-medium">{subtitle2}</p>
        </div>
      </div>
    </div>
  </div>
</div>
