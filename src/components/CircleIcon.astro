---
import Icon from "./Icon.astro";
export interface Props {
  icon: string;
  title: string;
}
const { icon, title }: Props = Astro.props;
---

<div class="flex flex-col items-center justify-center">
  <div
    class="bg-secondary rounded-full h-24 w-24 flex items-center justify-center border-8 border-[#93D394] border-solid"
  >
    <Icon icon={icon} />
  </div>
  <p class="mt-2 text-white">{title}</p>
</div>
