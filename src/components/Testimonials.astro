---
import TestimonialCard, {
  type Props as CardProps,
} from "./TestimonialCard.astro";

interface Props {
  title: string;
  subtitle: string;
  items: CardProps[];
}

const { title, subtitle, items } = Astro.props;
---

<div class="mx-auto max-w-screen-2xl px-4 py-12 sm:px-6 lg:px-8 lg:py-16">
  <div class="md:flex md:items-end md:justify-between">
    <div class="max-w-xl">
      <h2 class="text-4xl font-bold tracking-tight text-gray-900 sm:text-5xl">
        {title}
      </h2>

      <p class="mt-6 max-w-lg leading-relaxed text-gray-700">
        {subtitle}
      </p>
    </div>

    <a
      href="#"
      class="mt-6 inline-flex shrink-0 items-center gap-2 rounded-full border border-main px-5 py-3 text-main transition hover:bg-main hover:text-white md:mt-0"
    >
      <span class="font-medium"> Read all reviews </span>

      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="size-4 rtl:rotate-180"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
      </svg>
    </a>
  </div>

  <div class="mt-8 grid grid-cols-1 gap-4 md:grid-cols-3">
    {
      items.map(({ title, description, footerText }) => (
        <TestimonialCard
          title={title}
          description={description}
          footerText={footerText}
        />
      ))
    }
  </div>
</div>
