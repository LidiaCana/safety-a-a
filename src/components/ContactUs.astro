---
import Icon from "./Icon.astro";
---

<section id="contact" class="text-white h-max xl:h-screen">
  <div class="flex items-start h-full py-20 px-6 xl:px-40">
    <div class="flex flex-col w-full gap-6">
      <div class="text-black xl:px-10 py-6 w-full">
        <h1 class="text-40 mb-8 font-semibold text-blue-footer text-center">
          Contact Us
        </h1>
        <p class="mb-8 text-xl font-semibold text-blue-footer">
          Your privacy is important to us. We will not share or publicize the
          information you provide when you contact us. We use your data solely
          to respond to your inquiries.
        </p>

        <div class="space-y-8">
          <div class="flex flex-wrap xl:flex-nowrap gap-8">
            <div class="w-full">
              <label
                for="firstName"
                class="block mb-2 text-sm font-semibold text-blue-footer"
                >Name</label
              >
              <input
                type="text"
                id="firstName"
                data-first-name
                name="firstName"
                class="shadow-sm bg-white border-2 border-[#CBD2E0] text-black text-sm rounded-md focus:ring-primary-500 focus:border-primary-500 w-full p-2.5"
                required
              />
            </div>
            <div class="w-full">
              <label
                for="lastName"
                class="block mb-2 text-sm font-semibold text-blue-footer"
                >Last Name</label
              >
              <input
                type="text"
                id="lastName"
                data-lastname
                name="lastName"
                class="shadow-sm bg-white border-2 border-[#CBD2E0] text-black text-sm rounded-md focus:ring-primary-500 focus:border-primary-500 w-full p-2.5"
                required
              />
            </div>
          </div>
          <div class="flex flex-wrap xl:flex-nowrap gap-8">
            <div class="w-full">
              <label
                for="Email"
                class="block mb-2 text-sm font-semibold text-blue-footer"
                >Email</label
              >
              <input
                type="email"
                data-email
                id="Email"
                name="email"
                class="shadow-sm bg-white border-2 border-[#CBD2E0] text-black text-sm rounded-md focus:ring-primary-500 focus:border-primary-500 w-full p-2.5"
                required
              />
            </div>
            <div class="w-full">
              <label
                for="phoneNumber"
                class="block mb-2 text-sm font-semibold text-blue-footer"
                >Phone Number</label
              >
              <input
                type="number"
                data-phone
                id="phoneNumber"
                name="phoneNumber"
                class="shadow-sm bg-white border-2 border-[#CBD2E0] text-black text-sm rounded-md focus:ring-primary-500 focus:border-primary-500 w-full p-2.5"
                placeholder="555-5555-5555"
                required
              />
            </div>
          </div>
          <div class="sm:col-span-2">
            <label
              for="message"
              class="block mb-2 text-sm font-semibold text-blue-footer"
              >Description</label
            >
            <textarea
              id="message"
              data-msj
              name="message"
              rows="6"
              class="block p-2.5 w-full text-sm text-black bg-white rounded-lg shadow-sm border border-gray-300"
            >
            </textarea>
          </div>
          <button
            data-send-button
            class="flex gap-2 items-center text-white bg-gradient-to-tl from-[#081016] to-[#244663] hover:bg-rust-button-hover font-medium rounded-lg text-base px-4 py-2.5 mr-2 mb-2"
            >Send
            <Icon icon="arrow-right" />
          </button>
        </div>
      </div>
    </div>
  </div>
</section>
