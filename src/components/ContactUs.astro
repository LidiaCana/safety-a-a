---
import Icon from "./Icon.astro";
interface Props {
  title: string;
  subtitle: string;
}
const { title, subtitle } = Astro.props;
---

<div class="w-full px-4 py-12 sm:px-6 sm:py-16 lg:w-1/2 lg:px-8 lg:py-24">
  <div class="mx-auto max-w-lg text-center">
    <h1 class="text-2xl font-bold sm:text-3xl">{title}</h1>

    <p class="mt-4 text-main">
      {subtitle}
    </p>
  </div>

  <form
    action="mailto:recipient@example.com"
    method="post"
    enctype="text/plain"
    class="mx-auto mb-0 mt-8 max-w-md space-y-4"
  >
    <div>
      <textarea
        id="message"
        name="message"
        class="mt-2 w-full rounded-lg border-gray-200 align-top shadow-sm sm:text-sm p-4"
        rows="4"
        placeholder="Enter any additional order notes..."></textarea>
    </div>
    <br />
    <div>
      <button
        type="submit"
        class="w-full mt-6 inline-flex justify-center items-center gap-2 rounded-full border border-main px-5 py-3 text-main text-center transition hover:bg-main hover:text-white md:mt-0"
      >
        Send
      </button>
    </div>

    <div class="flex items-center justify-between"></div>
  </form>
</div>

<div
  class="relative h-[20vh] w-full sm:h-96 lg:h-[48%] lg:w-[48%] bg-[url('https://iili.io/J41KnTB.md.webp')] bg-no-repeat bg-cover bg-cente shadow-2xl rounded-2xl"
>
</div>
