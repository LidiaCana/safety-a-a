---
import type { Props as BadgetProps } from "./Badget.astro";
import Badget from "./Badget.astro";

interface Props {
  title: string;
  subtitle: string;
  items: BadgetProps[];
  buttonText: string;
}
const { title, subtitle, buttonText, items } = Astro.props;
---

<div class="max-w-screen-xl px-4 py-8 sm:px-6 sm:py-12 lg:px-8 lg:py-16">
  <div
    class="grid grid-cols-1 gap-y-8 lg:grid-cols-2 lg:items-center lg:gap-x-16"
  >
    <div
      class="mx-auto max-w-lg text-center lg:mx-0 ltr:lg:text-left rtl:lg:text-right"
    >
      <h2 class="text-3xl font-bold sm:text-4xl">{title}</h2>

      <p class="mt-4 text-gray-600">
        {subtitle}
      </p>

      <a
        href="#contact"
        class="mt-8 inline-block rounded bg-main px-12 py-3 text-sm font-medium text-white transition hover:bg-indigo-700 focus:outline-none focus:ring focus:ring-yellow-400"
      >
        {buttonText}
      </a>
    </div>

    <div class="grid grid-cols-2 gap-4 sm:grid-cols-3">
      {
        items.map(({ title, subtitle1, subtitle2 }) => (
          <Badget title={title} subtitle1={subtitle1} subtitle2={subtitle2} />
        ))
      }
    </div>
  </div>
</div>
