  <section id="all">
    <AllCourse
      title={ALL_TITLE}
      subtitle={ALL_SUBTITLE}
      items={ALL_COURSES}
      buttonText={BUTTON_TXT_ALL}
    />
  </section>
  <section id="services" class="text-black h-max py-10 my-10 bg-main">
    <Services title={SERVICES_TITLE} services={SERVICES} />
